    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Background="DarkGoldenrod">
            <TextBlock Text="Adzan" FontSize="25" Padding="10"/>
        </Grid>
        
        <Grid Grid.Row="1" Background="White">
            <!--<ListBox Margin="20" ItemsSource="{Binding Time}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding}" 
                                       Foreground="Black"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>-->
            
            <ListBox
                ItemsSource="{Binding Path=Time}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <toolkit:WrapPanel/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                           <!--<Border Height="60"
                                    Background="#74969E">
                                <Rectangle Style="{StaticResource RectangleEllipseStyle}">
                                    <Rectangle.Fill>
                                        <ImageBrush
                                            Stretch="UniformToFill"
                                            ImageSource="{Binding Path=.}" />
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Border>-->
                            
                            <TextBlock
                                Text="{Binding Path=.}"
                                Foreground="Black"
                                FontSize="40"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
    

